---
import "../styles/global.css";
import PostcardCreator from "../components/creator.jsx";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Delius+Swash+Caps&family=Limelight&display=swap");
    </style>
    <title>Digital postcards</title>
  </head>
  <body>
    <div
      class="bg-linear-65 from-orange-600 to-amber-500 min-h-screen w-screen flex-col flex items-center justify-center p-4 sm:p-6 md:p-8"
    >
      <h1 class="text-white text-6xl mb-10 font-extrabold drop-shadow-2xl">
        Digital Postcards
      </h1>
      <PostcardCreator
        client:only="react"
        initial=""
        title="Greetings from the internet"
      />
    </div>
  </body>
</html>
